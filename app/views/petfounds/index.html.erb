<div class="container mt-5">
  <!-- Botones de navegación superior -->
  <div class="d-flex justify-content-between mb-4">
    <div>
      <%= link_to root_path, class: 'btn btn-success text-white' do %>
        <i class="fa-solid fa-house"></i>
      <% end %>
    </div>
    <div>
      <%= link_to 'Encontré una mascota', new_petfound_path, class: 'btn btn-success text-white ms-2' %>
    </div>
  </div>

  <!-- Fila para mostrar las mascotas encontradas -->
  <div class="row">
    <% @petfounds.each do |petfound| %>
      <div class="col-md-4 mb-4">
        <div class="card mb-4 shadow-sm d-flex flex-column" style="border-radius: 15px;">
          <!-- Carrusel de fotos -->
          <% if petfound.photos.any? %>
            <div id="carouselExample<%= petfound.id %>" class="carousel slide" data-bs-ride="carousel">
              <div class="carousel-inner">
                <% petfound.photos.each_with_index do |photo, index| %>
                  <div class="carousel-item <%= 'active' if index == 0 %>">
                    <%= cl_image_tag photo.key, class: 'd-block w-100', style: 'height: 250px; object-fit: cover; border-radius: 15px;' %>
                  </div>
                <% end %>
              </div>
              <!-- Controles del carrusel -->
              <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample<%= petfound.id %>" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#carouselExample<%= petfound.id %>" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
          <% else %>
            <%= image_tag 'default-image.png', class: 'card-img-top', style: 'height: 250px; object-fit: cover; border-radius: 15px;' %>
          <% end %>

          <!-- Información de la mascota encontrada -->
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= petfound.details %></h5>
            <p class="card-text">Raza: <%= petfound.breed %></p>
            <% if petfound.color.present? %>
              <% colors_array = JSON.parse(petfound.color).reject(&:blank?) %>
              <p class="card-text">Color: <%= colors_array.join(', ') %></p>
            <% end %>
            <p class="card-text">Señas particulares: <%= petfound.signs %></p>
            <p class="card-text">Encontrado el: <%= petfound.day_found %></p>
            <p class="card-text">Dirección donde fue encontrado: <%= petfound.address %></p>

            <!-- Botón Ver Detalles -->
            <div class="mt-auto">
              <%= link_to 'Ver detalles', petfound_path(petfound), class: 'btn btn-success text-white' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Botón para crear una nueva mascota encontrada -->
  <div class="d-flex justify-content-end mt-4">
    <%= link_to 'Crear nueva mascota encontrada', new_petfound_path, class: 'btn btn-primary' %>
  </div>
</div>
