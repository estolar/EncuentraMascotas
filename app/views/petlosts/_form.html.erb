<%= simple_form_for(petlost) do |f| %>
  <%= f.input :name %>
  <%= f.input :breed, collection: Petlost::BREEDS, prompt: 'Selecciona su raza' %>
  <%= f.input :color, collection: Petlost::COLORS, hint: 'Selecciona su(s) color(es). Si tiene más de dos, selecciona primero bicolor/tricolor y luego sus colores!', input_html: {
    multiple: true, data: {
      controller: "tom-select",
      tom_select_options_value: { tags: true }
      }
    } %>
  <%= f.input :signs %>
  <%= f.input :day_lost, placeholder: 'Selecciona una fecha',
              as: :string,
              input_html: {
                data: {
                  controller: "datepicker",
                  datepicker_today_value: Date.today
                }
              } %>
  <%= f.input :day_lost, html5: true %>
   <% if @petlost.photos.attached? %>
    <div class="current-photo">
      <p>Imagen actual:</p>
      <% @petlost.photos.each do |photo| %>
        <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
        <% end %>
    </div>
  <% end %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.input :address, label: "Dirección donde se perdió" %>
  <%= f.hidden_field :user_id, value:current_user.id %>
  <%= f.hidden_field :finded, value: false %>
  <%= f.submit %>
<% end %>

<% console %>
