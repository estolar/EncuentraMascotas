<%= simple_form_for(petlost) do |f| %>
  <%= f.input :name, label: "Nombre"%>
  <%= f.input :breed, label: "Raza", collection: Petlost::BREEDS, prompt: 'Selecciona su raza' %>
  <%= f.input :color, label: "Color", collection: Petlost::COLORS, hint: 'Selecciona su(s) color(es). Si tiene más de dos, selecciona primero bicolor/tricolor y luego sus colores!', input_html: {
    multiple: true, data: {
      controller: "tom-select",
      tom_select_options_value: { tags: true }
      }
    } %>
  <%= f.input :signs, label: 'Características/peculiaridades' %>
  <%= f.input :day_lost, placeholder: '¿Cuándo se perdió?',
              as: :string,
              input_html: {
                data: {
                  controller: "datepicker",
                  datepicker_today_value: Date.today
                }
              } %>

   <% if @petlost.photos.attached? %>
    <div class="current-photo">
      <p>Imagen actual:</p>
      <% @petlost.photos.each do |photo| %>
        <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
        <% end %>
    </div>
  <% end %>

    <div data-controller='upl-image' data-upl-image-url-value=''>
      <button id="upload_widget" type="button" data-action="upl-image#openWidget" class="cloudinary-button">Subir Imágenes</button>
    </div>
    <%# <%= f.input :photos, as: :file, label: 'Adjunta una foto', input_html: { multiple: true } %> %>
    <%= f.input :address, label: "Ingresa la dirección donde se perdió" %>
    <%= f.hidden_field :user_id, value:current_user.id %>
    <%= f.hidden_field :finded, value: false %>
    <%= f.submit %>
  <% end %>
