<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "http://enrsto.freehostia.com/enriquestolar.com/img/logo-horizontal-navbar-encuentramascotas.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <%= link_to loading_screen_petlosts_path, class: 'btn btn-primary text-white me-3' do %>
            <i class="fa-solid fa-paw"></i>
            <i class="fa-solid fa-location-dot me-2"></i>
            Mascotas cerca
          <% end %>
          <li class="nav-item dropdown">
          <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <% if current_user.photo.attached? %>
              <%= image_tag current_user.photo, class: "avatar", alt: "dropdown menu" %>
            <% else %>
              <%= image_tag "https://res.cloudinary.com/dqx97scli/image/upload/v1726180273/development/xcpqaf6zmnmygc31q6dp0rx7nd2m.png", class: "avatar", alt: "dropdown menu" %>
            <% end %>
          </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Mi mascota", user_pets_losts_petlosts_path, class: "dropdown-item" %>
              <%= link_to "Mis Mascotas Encontradas", user_pets_founds_petfounds_path, class: "dropdown-item" %>
              <%= link_to "Editar perfil", edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
